<header class="panel-heading">
	Novo Usuário
</header>
<div class="col-lg-12">
  <a href="/admin/users_admin">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
      <% if @user.errors.any? %>
          <div class="alert alert-danger">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </div>
      <% end %>
      	<div class="panel-body">
         	<%= form_for @user, url: users_admin_index_path(@user)  do |f| %> 
            <div class="form-group">
                <%= f.label 'Perfil*' %><br>
                <%= f.select :role_id, Role.where.not(id: [1]).collect {|role| [ role.name, role.id ] }, { prompt: 'Selecione o Perfil do Usuário' }, :class => 'form-control m-bot15' %>
            </div>

            <div class="form-group">
                <%= f.label 'Nome*' %><br>
                <%= f.text_field :name, 'class' => 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label 'Email*' %><br>
                <%= f.text_field :email, 'class' => 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label 'Senha*' %><br>
                <%= password_field_tag "user[password]", nil, id: "user_password", class: "form-control", placeholder: "Senha", autofocus: true, autocomplete: "off" %>
            </div>

            <div class="form-group">
              <%= f.label 'Confirmação de Senha*' %><br />
              <%= password_field_tag "user[password_confirmation]", nil, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
            </div>
        <% end %>
      </div>
  </section>
</div>