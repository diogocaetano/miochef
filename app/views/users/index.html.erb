<div class="row">
    <div class="col-lg-12">
        <a href="/admin/users_admin/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <% if alert %>
              <div class="alert alert-block alert-danger fade in">
                  <%= alert %>
              </div>
            <% end %>
            <header class="panel-heading">
                Usuários
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Perfil</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                  <td><%= user.role.name %></td>
                                  <td><%= user.name %></td>
                                  <td><%= user.email %></td>                                  
                                  <td>
                                    <a href="/admin/users_admin/<%=user.id%>" class="btn btn-primary"><i class="fa fa-eye"></i></button></a>
                                    <a href="/admin/users_admin/<%=user.id%>/edit" class="btn btn-info"><i class="fa fa-pencil"></i></button></a>
                                    <a data-toggle="modal" href="#delete_user_<%=user.id%>" class="btn btn-danger"><i class="fa fa-trash-o"></i></button></a>
                                    <a data-toggle="modal" href="#modal-change-password-<%=user.id%>" class="btn btn-success"><i class="fa fa-cog"></i></button></a>
                                    </td>
                                </tr>
                                <div class="modal fade modal-dialog-center in" id="delete_user_<%=user.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;"></div>
                                        <div class="modal-dialog ">
                                            <div class="modal-content-wrap">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        <h4 class="modal-title">Remover Usuário</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                      <div class="text-center">
                                                        Deseja Realmente Remover o Usuário?
                                                      </div>
                                                    </div>
                                                    <div class="modal-footer">                              
                                                        <div class="pull-left">
                                                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                                                        </div>
                                                        <a href="/admin/users_admin/<%=user.id%>" class="btn btn-primary" data-method="delete">Confirmar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- MODAL MUDAR SENHA -->
                                <div class="modal fade modal-dialog-center in" id="modal-change-password-<%=user.id%>"
                                tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                <div class="modal-backdrop fade in" style="height: 749px;">
                                </div>
                                <div class="modal-dialog ">
                                  <div class="modal-content-wrap">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                          <h4 class="modal-title">Editar Senha</h4>
                                      </div>
                                      <%= form_for user, :url => { :action => 'update_password', :controller => 'users', :method => :patch } do |f| %>
                                        <%= f.hidden_field(:id) %>
                                        <div class="modal-body">
                                          <div class="form-group">
                                            <div class="field">
                                              <%= f.label "Senha Atual" %> <i></i><br />
                                              <%= f.password_field :current_password, class: 'form-control' %>
                                            </div>
                                          </div>
                                        <div class="form-group">
                                            <div class="field">
                                              <%= f.label :password, "Nova Senha" %><br />
                                              <%= f.password_field :password, :autocomplete => "off", class: 'form-control'  %>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <div class="field">
                                              <%= f.label "Redigite a Nova Senha" %><br />
                                              <%= f.password_field :password_confirmation, class: 'form-control' %>
                                            </div>
                                          </div>
                                        </div>
                                        <div class="modal-footer">
                                          <div class="pull-left">
                                            <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                                          </div>
                                          <div class="form-group">
                                            <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
                                          </div>
                                        </div>
                                      <% end %>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <!-- FIM MODAL MUDAR SENHA -->
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
