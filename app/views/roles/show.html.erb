<div class="col-lg-12">
    <a href="/roles">
        <button type="button" class="btn btn-default">Voltar</button>
    </a>
    <div class="panel"></div>
  <section class="panel">
      <div class="panel-heading">
          <div class="panel-title">Detalhes</div>
      </div>
      <div class="panel-body form-horizontal">
          <div class="form-group">
              <label for="name" class="control-label col-lg-3">Nome</label>
              <div class="col-lg-9">
                  <label for="name" class="form-control-static"><%= @role.name %></label>
              </div>
          </div>          
      <div class="panel-body">
      <div class="panel-heading">
        <div class="panel-title">Permiss√µes do Perfil</div>
      </div>
      <br/>
      <div class="form-group">
        <label class="control-label col-md-3"></label>
          <div class="col-md-9">
            <select readonly multiple="multiple" class="multi-select" id="my_multi_select2" name="permission_ids[]">
              <% if current_user.is_dev %>
                <% Entity.all.each do |entity| %>
                  <optgroup label="<%= entity.name %>">
                    <% entity.permissions.each do |permission| %>
                      <%= PermissionsHelper::render_permissions_multiSelect(@role.permissions, permission) %>
                    <% end %>
                  </optgroup>
                <% end %>
              <% else %>
                <% Entity.where.not(is_dev: true).collect { |entity| entity }.each do |entity| %>
                  <optgroup label="<%= entity.name %>">
                    <% entity.permissions.each do |permission| %>
                      <%= PermissionsHelper::render_permissions_multiSelect(@role.permissions, permission) %>
                    <% end %>
                  </optgroup>
              <% end %>
            <% end %>
            </select>
          </div>
      </div>
    </div>
  </section>
</div>