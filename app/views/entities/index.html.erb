<div class="row">
    <div class="col-lg-12">
        <a href="/admin/entities/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <% if alert %>
              <div class="alert alert-block alert-danger fade in">
                  <%= alert %>
              </div>
            <% end %>
            <header class="panel-heading">
                Módulos
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Slug</th>
                                <th>Controlador</th>
                                <th>Ação</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @entities.each do |entity| %>
                                <tr>
                                  <td><%= entity.name %></td>
                                  <td><%= entity.modules_category.name %></td>
                                  <td><%= entity.slug %></td>
                                  <td><%= entity.controller %></td>
                                  <td><%= entity.is_dev ? 'Sim' : 'Não' %></td>
                                  <td>
                                    <a href="/entities/<%=entity.id%>" class="btn btn-primary"><i class="fa fa-eye"></i></button></a>
                                    <a href="/entities/<%=entity.id%>/edit" class="btn btn-info"><i class="fa fa-pencil"></i></button></a>
                                    <a data-toggle="modal" href="#delete_entity_<%=entity.id%>" class="btn btn-danger"><i class="fa fa-trash-o"></i></button></a>
                                    </td>
                                </tr>
                                <div class="modal fade modal-dialog-center in" id="delete_entity_<%=entity.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;"></div>
                                        <div class="modal-dialog ">
                                            <div class="modal-content-wrap">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        <h4 class="modal-title">Remover Módulo</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                      <div class="text-center">
                                                        Deseja Realmente Remover o Módulo?
                                                      </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <div class="pull-left">
                                                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                                                        </div>
                                                        <a href="/entities/<%=entity.id%>" class="btn btn-primary" data-method="delete">Confirmar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
