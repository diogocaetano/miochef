<div class="row">
    <div class="col-lg-12">
        <%= link_to raw("<button type='button' class='btn btn-primary'>Adicionar</button>"), new_entity_path %>
        <div class="panel"></div>
        <section class="panel">
           
            <header class="panel-heading">
                Módulos
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Slug</th>
                                <th>Controlador</th>
                                <th>Ação</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @entities.each do |entity| %>
                                <tr>
                                  <td><%= entity.name %></td>
                                  <td><%= entity.modules_category.name %></td>
                                  <td><%= entity.slug %></td>
                                  <td><%= entity.controller %></td>
                                  <td><%= entity.is_dev ? 'Sim' : 'Não' %></td>
                                  <td>
                                    <%= link_to raw("<i class='fa fa-eye'></i>"), entity, :class => 'btn btn-primary' %>
                                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_entity_path(entity), :class => 'btn btn-info' %>
                                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_entity_'+entity.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>                                   
                                </tr>
                                <div class="modal fade modal-dialog-center in" id="delete_entity_<%=entity.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                        <div class="modal-dialog ">
                                            <div class="modal-content-wrap">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        <h4 class="modal-title">Remover Módulo</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                      <div class="text-center">
                                                        Deseja Realmente Remover o Módulo?
                                                      </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <div class="pull-left">
                                                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                                                        </div>
                                                        <%= link_to "Confirmar",  entity_path(entity), :class => 'btn btn-primary', :'data-method' => 'delete'  %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
