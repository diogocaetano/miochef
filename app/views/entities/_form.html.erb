<div class="col-lg-12">
    <a href="/admin/entities">
        <button type="button" class="btn btn-default">Voltar</button>
    </a>
    <div class="panel"></div>
    <section class="panel">
        <% if @entity.errors.any? %>
            <div class="alert alert-danger">
                <% @entity.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </div>
        <% end %>
        <div class="panel-body">
            <%= form_for(@entity) do |f| %>
                <div class="form-group">
                    <%= f.label 'Categoria do Módulo' %><br>
                    <%= f.select :modules_category_id, ModulesCategory.all.collect {|category| [ category.name, category.id ] }, { prompt: 'Selecione a Categoria do Módulo' }, :class => 'form-control m-bot15' %>
                </div>

                <div class="form-group">
                    <%= f.label 'Nome do Módulo' %><br>
                    <%= f.text_field :name, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label 'Slug' %><br>
                    <%= f.text_field :slug, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :controller %><br>
                    <%= f.text_field :controller, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :is_dev %><br>
                    <%= f.check_box :is_dev %>
                </div>

                <div class="form-group">
                    <%= f.label 'Visível' %><br>
                    <%= f.check_box :visible %>
                </div>

                <div class="form-group">
                    <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </section>
</div>