<div class="col-lg-12">
    <%= form_for(@entity) do |f| %>
    <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), entities_path %>
    <div class="panel"></div>
    <section class="panel">
        <header class="panel-heading">
            Novo M贸dulo
        </header>
        <% if @entity.errors.any? %>
            <div class="alert alert-danger">
                <% @entity.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </div>
        <% end %>
        <div class="panel-body">
                <div class="form-group">
                    <%= f.label 'Categoria do M贸dulo*' %><br>
                    <%= f.select :modules_category_id, ModulesCategory.all.collect {|category| [ category.name, category.id ] }, { prompt: 'Selecione a Categoria do M贸dulo' }, :class => 'form-control m-bot15' %>
                </div>

                <div class="form-group">
                    <%= f.label 'Nome do M贸dulo*' %><br>
                    <%= f.text_field :name, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label 'Slug*' %><br>
                    <%= f.text_field :slug, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label "Controlador*" %><br>
                    <%= f.text_field :controller, 'class' => 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :is_dev %><br>
                    <%= f.check_box :is_dev %>
                </div>

        </div>
    </section>
    <div class="form-group">
        <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
<% end %>
</div>