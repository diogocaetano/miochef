<div class="row">
  <div class="col-lg-12">
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Pratos do Dia - <%= I18n.t(:"date.day_names")[Date.today.wday].to_s %>
      </header>
      <div class="panel-body">
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                <th>Prato</th>
                <th>Chef</th>
                <th>Preço</th>
                <th>Qtd disponível</th>
                <th>Qtd de pedidos</th>
                <th>Horário do último pedido</th>
                <th colspan='3'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @plates.each do |plate| %>
                <tr>
                  <td><%= link_to plate.title, edit_plate_path(plate) %></td>
                  <td><%= link_to plate.chef.name, edit_chef_path(plate.chef) %></td>
                  <td><%= number_to_currency(plate.price, unit: "R$", separator: ",", delimiter: ".") %></td>
                  <td><%= plate.available_quantity %></td>
                  <td>---</td>
                  <td>---</td>
                  <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), plate, :class => 'btn btn-primary' %>
                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_plate_path(plate), :class => 'btn btn-info' %>
                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_plate_'+plate.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                  </td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>