<div class="col-lg-12">
  <a href="/admin/modules_categories">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
      <% if @modules_category.errors.any? %>
          <div class="alert alert-danger">
              <% @modules_category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </div>
      <% end %>
      <div class="panel-body">
          <%= form_for(@modules_category) do |f| %>
              <div class="form-group">
                  <%= f.label 'Nome da Categoria' %><br>
                  <%= f.text_field :name, 'class' => 'form-control' %>
              </div>

              <div class="form-group">
                  <%= f.label 'Ícone' %><br>
                  <%= f.text_field :icon, 'class' => 'form-control' %>
              </div>

              <div class="form-group">
                  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
              </div>
          <% end %>
      </div>
  </section>
</div>