<div class="row">
    <div class="col-lg-12">
        <%= link_to raw("<button type='button' class='btn btn-primary'>Adicionar</button>"), new_modules_category_path %>
        <div class="panel"></div>
        <section class="panel">
            <header class="panel-heading">
                Usuários
                <% if @term %>
                    <div class="pull-right">
                      <%= link_to raw("<i class='fa fa-times'></i>"), modules_category_path, :class => 'btn btn-xs btn-shadow btn-danger tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Remover termo da pesquisa' %>
                    </div>
                <% end %>
            </header>
            <div class="panel-body">
                <div class="pull-right">
                    <%= form_tag(modules_categories_path, method: 'GET') do -%>
                        <input type="text" value="<%= @term %>" name="term" class="form-control search" placeholder="Digite o termo...">
                    <% end %>
                </div>
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>                                
                                <th>Nome</th>
                                <th>Ícone</th>                                
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @modules_categories.each do |category| %>
                                <tr>
                                  <td><%= category.name %></td>
                                  <td><%= category.icon %></td>
                                  
                                  <td>
                                    <%= link_to raw("<i class='fa fa-eye'></i>"), category, :class => 'btn btn-primary tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Visualizar' %>
                                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_modules_category_path(category), :class => 'btn btn-info tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Editar' %>
                                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_category_'+category.id.to_s, :class => 'btn btn-danger tooltips', :'data-toggle' => 'modal', 'data-placement': 'top', title: 'Deletar'  %>                               
                                    </td>
                                </tr>
                                <div class="modal fade modal-dialog-center in" id="delete_category_<%=category.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;"></div>
                                        <div class="modal-dialog ">
                                            <div class="modal-content-wrap">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        <h4 class="modal-title">Remover Categoria de Módulo</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                      <div class="text-center">
                                                        Deseja Realmente Remover a Categoria de Módulo?
                                                      </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <div class="pull-left">
                                                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                                                        </div>
                                                        <%= link_to "Confirmar", modules_category_path(category), :class => 'btn btn-primary', :'data-method' => 'delete'  %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            <% end %>
                        </tbody>
                    </table>
                    <div class="apple_pagination">
                      <div class="page_info">
                          <%= page_entries_info @modules_categories %>
                      </div>
                      <%= will_paginate @modules_categories %>
                    </div>
                </section>
            </div>
        </section>
    </div>
</div>
