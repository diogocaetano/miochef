<%= form_for @chef, html: { multipart: true } do |f| %>
<div class="col-lg-12">
    <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), chefs_path %>
  <div class="panel"></div>
  <section class="panel">
    <header class="panel-heading">
          Chefes
    </header>
    <% if @chef.errors.any? %>
      <div class="alert alert-danger">
        <% @chef.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label 'Tipo do Chefe*' %><br>
              <%= f.select :chef_type_id, ChefType.all.collect {|chef_type| [ chef_type.name, chef_type.id ] }, { prompt: 'Selecione o Tipo do Chefe' }, :class => 'form-control m-bot15' %>
            </div>
            <div class="form-group">
              <%= f.label 'Nome*' %><br>
              <%= f.text_field :name, :class => 'form-control' %>
            </div>
              
            <div class="form-group">
              <%= f.label 'Foto*' %><br>
              <%= f.file_field :photo, :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label 'CPF*' %><br>
              <%= f.text_field :cpf, :class => 'form-control mask-cpf' %>
            </div>
                    <div class="form-group">
              <%= f.label 'RG*' %><br>
              <%= f.text_field :rg, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Data de Nascimento*' %><br>
              <%= f.text_field :born_date, :class => 'form-control input-medium default-date-picker' %>
            </div>
            <div class="form-group">
              <%= f.label 'Email*' %><br>
              <%= f.text_field :email, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Telefone 1' %><br>
              <%= f.text_field :phone_one, :class => 'form-control mask-cellphone' %>
            </div>
                    <div class="form-group">
              <%= f.label 'Telefone 2' %><br>
              <%= f.text_field :phone_two, :class => 'form-control mask-cellphone' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label 'País*' %><br>
              <%= f.select :country_id, Country.all.collect {|country| [ country.name, country.id ] }, { prompt: 'Selecione o País' }, :class => 'form-control m-bot15' %>
            </div>
            <div class="form-group">
              <%= f.label 'Naturalidade*' %><br>
              <%= f.text_field :naturalness, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Universidade*' %><br>
              <%= f.text_field :university, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Formação Acadêmica*' %><br>
              <%= f.text_field :academic_education, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Especialidade*' %><br>
              <%= f.text_field :specialty, :class => 'form-control' %>
            </div>            
            <div class="form-group">
              <%= f.label 'Badges' %><br>
              <% Badge.all.each do |badge| %>
                <%= image_tag badge.image.url(:thumb) %>
                <input type="checkbox" name="badge_ids[]" value="<%=badge.id%>" <%= ChefsHelper::chef_have_this_badge?(badge, @chef) %>>
              <% end %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :description %><br>
              <%= f.text_area :description, :class => 'form-control summernote' %>
            </div>
          </div>
    </div>
  </section>
  <div class="form-group">
    <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
  </div>
</div>
<% end -%>