<div class="col-lg-12">
  <a href="/chefs">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
    <% if @chef.errors.any? %>
      <div class="alert alert-danger">
        <% @chef.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
      <%= form_for(@chef) do |f| %>
                  <div class="form-group">
            <%= f.label 'Nome*' %><br>
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label :description %><br>
            <%= f.text_area :description, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'CPF*' %><br>
            <%= f.text_field :cpf, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'RG*' %><br>
            <%= f.text_field :rg, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Data de Nascimento*' %><br>
            <%= f.date_select :born_date, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'País*' %><br>
            <%= f.select :country_id, Country.all.collect {|country| [ country.name, country.id ] }, { prompt: 'Selecione o País' }, :class => 'form-control m-bot15' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Email*' %><br>
            <%= f.text_field :email, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Telefone 1' %><br>
            <%= f.text_field :phone_one, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Telefone 2' %><br>
            <%= f.text_field :phone_two, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Especialidade' %><br>
            <%= f.text_field :specialty, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Naturalidade' %><br>
            <%= f.text_field :naturalness, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Formação Acadêmica' %><br>
            <%= f.text_field :academic_education, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Universidade' %><br>
            <%= f.text_field :university, :class => 'form-control' %>
          </div>
                <div class="form-group">
            <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        </div>
      <% end -%>
    </div>
  </section>
</div>