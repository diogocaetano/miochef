<div class="row">
  <div class="col-lg-12">
    <%= link_to raw("<button type='button' class='btn btn-primary'>Adicionar</button>"), new_chef_path %>
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Chefes
          <% if @term %>
            <div class="pull-right">
              <%= link_to raw("<i class='fa fa-times'></i>"), chefs_path, :class => 'btn btn-xs btn-shadow btn-danger tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Remover termo da pesquisa' %>
            </div>
          <% end %>
      </header>
      <% if @address.errors.any? %>
        <div class="alert alert-danger">
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
      <div class="panel-body">
        <div class="pull-right">
          <%= form_tag(chefs_path, method: 'GET') do -%>
              <input type="text" value="<%= @term %>" name="term" class="form-control search" placeholder="Digite o termo...">
          <% end %>
        </div>
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                <th>Tipo do Chefe</th>
                <th>Foto</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>País</th>
                <th>Email</th>
                <th>Especialidade</th>
                <th colspan='4'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @chefs.each do |chef| %>
                <tr>
                      <td><%= chef.chef_type ? chef.chef_type.name : 'Não cadastrado' %></td>
                      <td><%= image_tag chef.photo.url(:thumb) %></td>
                      <td><%= chef.name %></td>
                      <td><%= chef.cpf %></td>
                      <td><%= chef.country.name %></td>
                      <td><%= chef.email %></td>
                      <td><%= chef.specialty %></td>
                    <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), chef, :class => 'btn btn-primary tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Visualizar' %>

                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_chef_path(chef), :class => 'btn btn-info tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Editar' %>

                    <%= link_to raw("<i class='fa fa-location-arrow'></i>"), '#add_chef_address_'+chef.id.to_s, :class => 'btn btn-warning tooltips', :'data-toggle' => 'modal', title: 'Adicionar Endereço'  %>

                    <%= link_to raw("<i class='fa fa-location-arrow'></i>"), "chef_addresses/#{chef.id}", :class => 'btn btn-default tooltips', 'data-toggle': 'tooltip', 'data-placement': 'top', title: 'Visualizar Endereços' %>
                     <!-- ATIVAR/DESATIVAR -->                    
                    <% if chef.active %>
                      <%= link_to raw("<i class='fa fa-power-off'></i>"), '#deactivate_chef_'+chef.id.to_s, :class => 'btn btn-success tooltips', :'data-toggle' => 'modal', title: 'Desativar Chefe'  %>
                    <% else %>
                      <%= link_to raw("<i class='fa fa-power-off'></i>"), '#activate_chef_'+chef.id.to_s, :class => 'btn btn-danger tooltips', :'data-toggle' => 'modal', title: 'Ativar Chefe'  %>
                    <% end %>
                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_chef_'+chef.id.to_s, :class => 'btn btn-danger tooltips', :'data-toggle' => 'modal', 'data-placement': 'top', title: 'Deletar'  %>
                  </td>
                </tr>
                <%= render partial: 'chefs/activate_deactivate_chef_modal', locals: {chef: chef} %>

                <div class="modal fade modal-dialog-center in" id="delete_chef_<%= chef.id.to_s %>">
                  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                  <div class="modal-backdrop fade in" style="height: 749px;"></div>
                  <div class="modal-dialog ">
                    <div class="modal-content-wrap">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Remover Chefe</h4>
                        </div>
                        <div class="modal-body">
                          <div class="text-center">
                            Deseja Realmente Remover o Chefe
                          </div>
                        </div>
                        <div class="modal-footer">
                          <div class="pull-left">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                          </div>
                          <%= link_to raw("Confirmar"), chef, :class => 'btn btn-primary', :'data-method' => 'delete' %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal fade modal-dialog-center in" id="add_chef_address_<%= chef.id.to_s %>">
                    tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                  <div class="modal-backdrop fade in" style="height: 749px;"></div>
                  <div class="modal-dialog ">
                    <div class="modal-content-wrap">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Adicionar Endereço para o Chefe - <%= chef.name %></h4>
                        </div>
                        <div class="modal-body">
                          <%= render 'addresses/form', chef_id: chef.id %>
                        </div>
                        <div class="modal-footer">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end -%>
            </tbody>
          </table>
          <div class="apple_pagination">
              <div class="page_info">
                  <%= page_entries_info @chefs %>
              </div>
              <%= will_paginate @chefs %>
          </div>
        </section>
      </div>
    </section>
  </div>
</div>