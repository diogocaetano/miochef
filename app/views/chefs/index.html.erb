<div class="row">
  <div class="col-lg-12">
    <a href="/chefs/new">
        <button type="button" class="btn btn-primary">Adicionar Chef</button>
    </a>
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Chefs
      </header>
      <div class="panel-body">
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                                  <th>Nome</th>
                                  <th>Descrição</th>
                                  <th>CPF</th>
                                  <th>RG</th>
                                  <th>Data de Nascimento</th>
                                  <th>País</th>
                                  <th>Email</th>
                                  <th>Telefone 1</th>
                                  <th>Telefone 2</th>
                                  <th>Especialidade</th>
                                  <th>Naturalidade</th>
                                  <th>Formação Acadêmica</th>
                                  <th>Universidade</th>
                                <th colspan='3'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @chefs.each do |chef| %>
                <tr>
                                      <td><%= chef.name %></td>
                                      <td><%= chef.description %></td>
                                      <td><%= chef.cpf %></td>
                                      <td><%= chef.rg %></td>
                                      <td><%= chef.born_date %></td>
                                      <td><%= chef.country.name %></td>
                                      <td><%= chef.email %></td>
                                      <td><%= chef.phone_one %></td>
                                      <td><%= chef.phone_two %></td>
                                      <td><%= chef.specialty %></td>
                                      <td><%= chef.naturalness %></td>
                                      <td><%= chef.academic_education %></td>
                                      <td><%= chef.university %></td>
                                    <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), chef, :class => 'btn btn-primary' %>
                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_chef_path(chef), :class => 'btn btn-info' %>
                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_chef_'+chef.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                  </td>
                </tr>
                <div class="modal fade modal-dialog-center in" id="delete_chef_<%= chef.id.to_s %>"
                  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;">
                </div>
                <div class="modal-dialog ">
                  <div class="modal-content-wrap">
                    <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Remover Chefe</h4>
                      </div>
                      <div class="modal-body">
                        <div class="text-center">
                          Deseja Realmente Remover o Chefe
                        </div>
                      </div>
                      <div class="modal-footer">
                        <div class="pull-left">
                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                        </div>
                        <%= link_to raw("Confirmar"), chef, :class => 'btn btn-primary', :'data-method' => 'delete' %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end -%>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>