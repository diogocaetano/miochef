<div class="row">
  <div class="col-lg-12">
    <a href="/chefs/new">
        <button type="button" class="btn btn-primary">Adicionar Chefe</button>
    </a>
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Chefes
      </header>
      <% if @address.errors.any? %>
        <div class="alert alert-danger">
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
      <% if notice %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>
      <div class="panel-body">
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                <th>Tipo do Chefe</th>
                <th>Foto</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>País</th>
                <th>Email</th>
                <th>Especialidade</th>
                <th>Formação Acadêmica</th>
                <th colspan='4'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @chefs.each do |chef| %>
                <tr>
                      <td><%= chef.chef_type ? chef.chef_type.name : 'Não cadastrado' %></td>
                      <td><%= image_tag chef.photo.url(:thumb) %></td>
                      <td><%= chef.name %></td>
                      <td><%= chef.cpf %></td>
                      <td><%= I18n.l(chef.born_date) %></td>
                      <td><%= chef.country.name %></td>
                      <td><%= chef.email %></td>
                      <td><%= chef.specialty %></td>
                      <td><%= chef.academic_education %></td>
                    <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), chef, :class => 'btn btn-primary' %>
                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_chef_path(chef), :class => 'btn btn-info' %>
                    <%= link_to raw("<i class='fa fa-location-arrow'></i>"), '#add_chef_address_'+chef.id.to_s, :class => 'btn btn-info', :'data-toggle' => 'modal'  %>

                     <!-- ATIVAR/DESATIVAR -->                    
                    <% if chef.active %>
                      <%= link_to raw("<i class='fa fa-power-off'></i>"), '#deactivate_chef_'+chef.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                    <% else %>
                      <%= link_to raw("<i class='fa fa-power-off'></i>"), '#activate_chef_'+chef.id.to_s, :class => 'btn btn-success', :'data-toggle' => 'modal'  %>
                    <% end %>

                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_chef_'+chef.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                  </td>
                </tr>
                <%= render partial: 'chefs/activate_deactivate_chef_modal', locals: {chef: chef} %>

                <div class="modal fade modal-dialog-center in" id="delete_chef_<%= chef.id.to_s %>">
                  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                  <div class="modal-backdrop fade in" style="height: 749px;"></div>
                  <div class="modal-dialog ">
                    <div class="modal-content-wrap">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Remover Chefe</h4>
                        </div>
                        <div class="modal-body">
                          <div class="text-center">
                            Deseja Realmente Remover o Chefe
                          </div>
                        </div>
                        <div class="modal-footer">
                          <div class="pull-left">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                          </div>
                          <%= link_to raw("Confirmar"), chef, :class => 'btn btn-primary', :'data-method' => 'delete' %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal fade modal-dialog-center in" id="add_chef_address_<%= chef.id.to_s %>">
                    tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                  <div class="modal-backdrop fade in" style="height: 749px;"></div>
                  <div class="modal-dialog ">
                    <div class="modal-content-wrap">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Adicionar Endereço para o Chefe - <%= chef.name %></h4>
                        </div>
                        <div class="modal-body">
                          <%= render 'addresses/form', chef_id: chef.id %>
                        </div>
                        <div class="modal-footer">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              <% end -%>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>