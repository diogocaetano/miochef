<div class="col-lg-12">
  <%= form_for(@plate_accompaniment) do |f| %>
  <a href="/plate_accompaniments">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
  <header class="panel-heading">
    Acompanhamento
  </header>
    <% if @plate_accompaniment.errors.any? %>
      <div class="alert alert-danger">
        <% @plate_accompaniment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
                  <div class="form-group">
            <%= f.label "Nome*" %><br>
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
    </div>
  </section>
    <div class="form-group">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
    <% end -%>
</div>