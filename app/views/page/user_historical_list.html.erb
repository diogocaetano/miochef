<div id="pages-int" class="wrap-content bg-white-3">
  <div class="container-fluid int">
    <div class="row">
      <ol class="breadcrumb col-sm-10 col-md-10 col-xs-9">
        <li><%= link_to "Seu Conta", user_path %></li>
        <li class="active">Histórico de Pedidos</li>
      </ol>
      <div class="title s-left col-sm-2 col-md-2 col-xs-3">
        <div id="wrap-logoff">
          <%= link_to user_path do %>
          Sair
          <% end %>
        </div>
      </div>
      <div id="user-links-general" class="col-xs-12 col-sm-12 col-md-12">
        <div class="row">
          <!-- aside -->
          <%= render 'layouts/front/aside_user' %>
          <!-- aside -->
          <div id="info-user-block" class="int col-md-9 col-sm-9">
            <!-- wrap-banner-user -->
            <div id="links-user" class="col-md-12 col-sm-12 col-xs-12">
              <div class="row">
                <div class="title int-user">
                  <h2>Histórico de Pedidos</h2>
                </div>

                <div class="not-item-list hidden">
                  <span>Você não efetuou nenhuma compra.</span>
                </div>

                <div id="wrap-search">
                  <input type="text" placeholder="Filtrar Tabela" data-table="#table-historical" id="search-table" class="form-control">
                </div>

                <div class="table-responsive">
                  <table id="table-historical" class="table table-hover">
                    <tr class="active">
                      <th colspan="2">
                        Compras
                      </th>
                      <th colspan="3" class="t-right">
                        Total de compras: <b class="total-prod-hist"><span class="inline"></span> <i></i></b>
                      </th>
                    </tr>
                    <tr class="list-block">
                      <td>
                        <span>Chef:</span>
                        <i>Bartolomeu</i>
                      </td>
                      <td>
                        <%= image_tag 'http://67.media.tumblr.com/6ea825190937122a23779f2a931209bc/tumblr_o432klipv91st5lhmo1_1280.jpg', alt: "Nome do prato" %> <b>Macarrão com camarão</b>
                      </td>
                      <td>
                        <span><i>unid:</i> <b>5</b></span>
                        <span><i>total:</i> <b>R$150,00</b></span>
                        <span><i>dia:</i> <b>30/02/2016</b></span>
                      </td>
                      <td class="t-right">
                        <span class="warning">Cancelado</span>
                      </td>
                      <td align="right">
                        <%= link_to "Ver detalhe", user_historical_view_path %>
                      </td>
                    </tr>
                    <tr class="list-block">
                      <td>
                        <span>Chef:</span>
                        <i>Diogo Farias</i>
                      </td>
                      <td>
                        <%= image_tag 'http://41.media.tumblr.com/1b373a2292d22aa151a5dfb3bca55a58/tumblr_o432hnBUJ01st5lhmo1_1280.jpg', alt: "Nome do prato" %> <b>Fondue</b>
                      </td>
                      <td>
                        <span><i>unid:</i> <b>5</b></span>
                        <span><i>total:</i> <b>R$150,00</b></span>
                        <span><i>dia:</i> <b>30/02/2016</b></span>
                      </td>
                      <td class=" t-right">
                        <span class="ok">Entregue</span>
                      </td>
                      <td align="right">
                        <%= link_to "Ver detalhe", user_historical_view_path %>
                      </td>
                    </tr>
                    <tr class="list-block">
                      <td>
                        <span>Chef:</span>
                        <i>Carlos Brugirmark</i>
                      </td>
                      <td>
                        <b>Sanduiche de Filé</b>
                      </td>
                      <td>
                        <span><i>unid:</i> <b>5</b></span>
                        <span><i>total:</i> <b>R$150,00</b></span>
                        <span><i>dia:</i> <b>30/02/2016</b></span>
                      </td>
                      <td class="t-right">
                        <span class="waiting">Saiu para entrega</span>
                      </td>
                      <td align="right">
                        <%= link_to "Ver detalhe", user_historical_view_path %>
                      </td>
                    </tr>
                  </table>
                </div>

              </div>
              <!-- row  -->
            </div>
          </div>
          <!-- info-user-block -->
        </div>
      </div>
    </div><!-- row -->
  </div><!-- container-fluid -->
</div>
<!-- pages-int -->
