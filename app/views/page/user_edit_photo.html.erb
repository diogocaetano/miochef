<div id="pages-int" class="wrap-content bg-white-3">
  <div class="container-fluid int">
    <div class="row">
      <ol class="breadcrumb col-sm-10 col-md-10 col-xs-9">
        <li><%= link_to "Seu Conta", user_path %></li>
        <li class="active">Editar imagens</li>
      </ol>
      <div class="title s-left col-sm-2 col-md-2 col-xs-3">
        <div id="wrap-logoff">
          <%= link_to user_path do %>
          Sair
          <% end %>
        </div>
      </div>
      <div id="user-links-general" class="col-xs-12 col-sm-12 col-md-12">
        <div class="row">
          <!-- aside -->
          <%= render 'layouts/front/aside_user' %>
          <!-- aside -->
          <div id="info-user-block" class="int col-md-9 col-sm-9">
            <!-- wrap-banner-user -->
            <div id="links-user" class="col-md-12 col-sm-12 col-xs-12">
              <div class="row">
                <div class="title int-user">
                  <h2>Editar Imanges</h2>
                </div>
                <form action="" class="form-validate">
                  <div class="row">
                    <div class="col-md-12 row">
                      <div class="form-group col-md-6 col-sm-6 m-bottom-group">
                        <div class="wrap-img-show">
                          <label>Foto Atual</label>
                          <%= image_tag 'content/avatar.jpg', alt: "Luiz Valença", class: "img-responsive" %>
                            <a href="#" class="remove-img" data-iduser="0">Remover foto</a>
                        </div>
                        <label for="photo-perfil">Imagem do Perfil</label>
                        <input type="file" name="photo-perfil" class="">
                        <span class="description pad-top">JPG, GIF or PNG. Com até 2MB</span>
                      </div>
                    </div>
                    <div class="col-md-12 row">
                      <div class="form-group col-md-6 col-sm-6">
                        <div class="wrap-img-show">
                          <label>Banner Atual</label>
                          <%= image_tag 'content/temp/banner-user.jpg', alt: "Banner", class: "img-responsive" %>
                          <a href="#" class="remove-img" data-iduser="0">Remover Banner</a>
                        </div>
                        <label for="banner-perfil">Banner do Perfil</label>
                        <input type="file" name="banner-perfil" class="">
                        <span class="description pad-top">JPG, GIF or PNG. Com até 2MB</span>
                      </div>
                    </div>
                    <div class="col-md-12 row wrap-submit">
                      <div class="col-md-4">
                        <button type="submit" class="btn btn-default">Atualizar Imagens</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <!-- row  -->
            </div>
          </div>
          <!-- info-user-block -->
        </div>
      </div>
    </div><!-- row -->
  </div><!-- container-fluid -->
</div>
<!-- pages-int -->
