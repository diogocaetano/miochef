<div id="pages-int" class="wrap-content bg-white-3">
  <div class="container-fluid int">
    <div class="row">
      <ol class="breadcrumb col-sm-10 col-md-10 col-xs-9">
        <li><%= link_to "Seu Conta", user_path %></li>
        <li class="active">Preferências de Email</li>
      </ol>
      <div class="title s-left col-sm-2 col-md-2 col-xs-3">
        <div id="wrap-logoff">
          <%= link_to user_path do %>
          Sair
          <% end %>
        </div>
      </div>
      <div id="user-links-general" class="col-xs-12 col-sm-12 col-md-12">
        <div class="row">
          <!-- aside -->
          <%= render 'layouts/front/aside_user' %>
          <!-- aside -->
          <div id="info-user-block" class="int col-md-9 col-sm-9">
            <!-- wrap-banner-user -->
            <div id="links-user" class="col-md-12 col-sm-12 col-xs-12">
              <div class="row">
                <div class="title int-user">
                  <h2>Preferências de Email</h2>
                </div>
                <form action="" class="form-validate">
                  <div class="row">
                    <div class="col-md-12 row">
                    <div class="form-group col-md-6 col-sm-6">
                        <label for="user-email">Email</label>
                        <div class="description">
                          <span>luizpaulo165@gmail.com</span>
                          <%= link_to "(alterar)", user_edit_email_path %>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12 row">
                      <div class="form-group col-md-2 col-sm-5">
                        <label for="user-password">Seu CEP <span>*</span></label>
                        <input type="user-cep" value="99999-999" class="form-control required cep" name="user-cep" id="user-cep" alt="99999-999">
                      </div>
                    </div>
                    <div class="col-md-12 row">
                      <div class="form-group col-md-10 col-sm-10">
                        <label>
                          <input type="checkbox" name="privacity"> <b>Emails Diários</b> - opções de jantar frescos em sua caixa de entrada todos os dias.
                        </label>
                      </div>
                    </div>
                    <div class="col-md-12 row">
                      <div class="form-group col-md-10 col-sm-10">
                        <label>
                          <input type="checkbox" name="privacity"> <b>Anúncios e Promoções</b> - receber novidades de descontos.
                        </label>
                      </div>
                    </div>
                    <div class="col-md-12 row wrap-submit">
                      <div class="col-md-4">
                        <button type="submit" class="btn">Atualizar</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <!-- row  -->
            </div>
          </div>
          <!-- info-user-block -->
        </div>
      </div>
    </div><!-- row -->
  </div><!-- container-fluid -->
</div>
<!-- pages-int -->
