<%= render file: 'dashboard/dashboard' %>
<div class="row">
  <div class="col-lg-12">
    <a href="/ingredients/new">
        <button type="button" class="btn btn-primary">Adicionar Ingrediente</button>
    </a>
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Ingredientes
      </header>
      <div class="panel-body">
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                                  <th>Nome</th>
                                <th colspan='3'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @ingredients.each do |ingredient| %>
                <tr>
                                      <td><%= ingredient.name %></td>
                                    <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), ingredient, :class => 'btn btn-primary' %>
                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_ingredient_path(ingredient), :class => 'btn btn-info' %>
                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_ingredient_'+ingredient.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                  </td>
                </tr>
                <div class="modal fade modal-dialog-center in" id="delete_ingredient_<%= ingredient.id.to_s %>"
                  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;">
                </div>
                <div class="modal-dialog ">
                  <div class="modal-content-wrap">
                    <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Remover Ingrediente</h4>
                      </div>
                      <div class="modal-body">
                        <div class="text-center">
                          Deseja Realmente Remover o Ingrediente
                        </div>
                      </div>
                      <div class="modal-footer">
                        <div class="pull-left">
                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                        </div>
                        <%= link_to raw("Confirmar"), ingredient, :class => 'btn btn-primary', :'data-method' => 'delete' %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end -%>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>