<div class="col-lg-12">  
  <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), requests_path %>
  <div class="panel"></div>
	<section class="panel">
    <div class="panel-heading">
        <div class="panel-title">Detalhes</div>
    </div>
    <div class="panel-body form-horizontal">
    		      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Cliente</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.client %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Endereço do Cliente</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.client_address %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Código de Pagamento</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.payment_code %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Data do Pedido</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.request_date %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Data da Entrega</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.delivery_date %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Janela da Entrega</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.delivery_window %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Status do Pedido</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @request.request_status %></label>
          </div>
	      </div>
	        </div>
  </section>
</div>