<div class="modal fade modal-dialog-center in" id="update_status_<%= request.id.to_s %>"
      tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">      
  <div class="modal-dialog ">
    <div class="modal-content-wrap">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Atualizar Status do Pedido</h4>
        </div>
        <%= form_for request, :url => request_update_status_path(request), :method => :post do |f| %>
        <div class="modal-body">
          <%= f.hidden_field :id %>
          <div class="form-group">
            <%= f.label 'Status do Pedido' %><br>
            <%= f.select :request_status_id, statuses.collect {|status| [ status.name, status.id]}, {value: request.request_status_id, prompt: 'Selecione o Status'}, {class: 'form-control'} %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="pull-left">
            <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
          </div>
          <div class="form-group">
            <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>