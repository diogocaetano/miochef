 <div class="modal fade modal-dialog-center in" id="main_address_<%= address.id.to_s %>"
  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-backdrop fade in" style="height: 749px;">
  </div>
  <div class="modal-dialog ">
    <div class="modal-content-wrap">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Tornar Endereço Principal</h4>
        </div>
        <div class="modal-body">
          <div class="text-center">
            Deseja Realmente Tornar o Endereço Principal?
          </div>
        </div>
        <div class="modal-footer">
          <div class="pull-left">
            <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
          </div>
         <%= form_for(address) do |f| %>
            <%= f.hidden_field :main, :value => true, :class => 'form-control' %>
            <%= hidden_field_tag :chef_id, chef_id, :class => 'form-control' %>
            <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>