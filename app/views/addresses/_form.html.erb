<div class="col-lg-12">
  <a href="/addresses">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
    <% if @address.errors.any? %>
      <div class="alert alert-danger">
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
      <%= form_for(@address) do |f| %>
                  <div class="form-group">
            <%= f.label 'Chefe*' %><br>
            <%= f.select :chef_id, Chef.all.collect {|chef| [ chef.name, chef.id ] }, { prompt: 'Selecione o Chefe' }, :class => 'form-control m-bot15' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Logradouro*' %><br>
            <%= f.text_field :public_place, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'NÃºmero*' %><br>
            <%= f.text_field :number, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Bairro*' %><br>
            <%= f.text_field :neighborhood, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Cidade*' %><br>
            <%= f.text_field :city, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Estado*' %><br>
            <%= f.text_field :state, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'CEP*' %><br>
            <%= f.text_field :zip_code, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Complemento*' %><br>
            <%= f.text_field :complement, :class => 'form-control' %>
          </div>
                <div class="form-group">
            <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        </div>
      <% end -%>
    </div>
  </section>
</div>