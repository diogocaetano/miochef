<div class="col-lg-12">
  <%= form_for @badge, html: {multipart: true} do |f| %>
    <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), badges_path %>
  <div class="panel"></div>
  <section class="panel">
    <header class="panel-heading">
          Chefs - Bagdes
    </header>
    <% if @badge.errors.any? %>
      <div class="alert alert-danger">
        <% @badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
          <div class="form-group">
            <%= f.label "Nome*" %><br>
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "DescriÃ§Ã£o*" %><br>
            <%= f.text_area :description, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "Imagem*" %><br>
            <% if @badge.image.exists? %>
              <%= image_tag @badge.image.url(:thumb) %><br><br>
            <% end %>
            <%= f.file_field :image %>
          </div>
    </div>
  </section>
<div class="form-group">
  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
</div>
<% end -%>
</div>