<div class="col-lg-12">
  <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), countries_path %>
  <div class="panel"></div>
	<section class="panel">
    <div class="panel-heading">
        <div class="panel-title">Detalhes</div>
    </div>
    <div class="panel-body form-horizontal">
    		      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Nome</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @country.name %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Iniciais</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @country.initials %></label>
          </div>
	      </div>
         <div class="form-group">
          <label for="number" class="control-label col-lg-3">Bandeira</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><h3 class="<%= @country.flag %>"></h3></label>
          </div>
        </div>
	        </div>
  </section>
</div>