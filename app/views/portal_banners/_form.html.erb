<div class="col-lg-12">
  <%= form_for @portal_banner, html: { multipart: true } do |f| %>  
  <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), portal_banners_path %>
  <div class="panel"></div>
  <section class="panel">
    <header class="panel-heading">
       Banner do Portal
    </header>
    <% if @portal_banner.errors.any? %>
      <div class="alert alert-danger">
        <% @portal_banner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
                  <div class="form-group">
            <%= f.label 'TÃ­tulo*' %><br>
            <%= f.text_field :title, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label 'Imagem*' %><br>
            <% if @portal_banner.image.exists? %>
              <%= image_tag @portal_banner.image.url(:thumb) %><br><br>
            <% end %>
            <%= f.file_field :image, :class => 'form-control' %>
          </div>
                  <div class="form-group">
            <%= f.label :link %><br>
            <%= f.text_field :link, :class => 'form-control' %>
          </div>
            </div>
  </section>
  <div class="form-group">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
  </div>
  <% end -%>
</div>