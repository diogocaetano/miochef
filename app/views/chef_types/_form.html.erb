<div class="col-lg-12">
<%= form_for(@chef_type) do |f| %>
    <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), chef_types_path %>
  <div class="panel"></div>
  <section class="panel">
   <header class="panel-heading">
          Tipos de chefes
    </header>
    <% if @chef_type.errors.any? %>
      <div class="alert alert-danger">
        <% @chef_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
                  
        <div class="form-group">
          <%= f.label 'Nome*' %><br>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
    </div>
  </section>
<div class="form-group">
  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
</div>
<% end -%>
</div>