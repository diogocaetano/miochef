<!-- MODAL NUTRITIONAL TABLE -->
                  <div class="modal fade modal-dialog-center in" id="nutritional_table_<%= plate.id.to_s %>"
                    tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-backdrop fade in" style="height: 749px;">
                    </div>
                    <div class="modal-dialog ">
                      <div class="modal-content-wrap">
                        <div class="modal-content">
                          <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                              <h4 class="modal-title">Tabela Nutricional</h4>
                          </div>
                          <%= form_for plate, :url => plate_nutritional_table_path(plate), :method => :post do |f| %>
                            <%= f.hidden_field :id %>
                            <%= fields_for :nutritional_table, plate.nutritional_table do |nutritional_fields| %>
                            <div class="modal-body">
                              <div class="panel-body">
                                <div class="form-group">
                                  <%= nutritional_fields.label :energetic_value %>
                                  <%= nutritional_fields.text_field 'energetic_value_mask', :value => get_formatted_energetic_value(plate), class: 'form-control currency group_nutritional_plate_' + plate.id.to_s, :data => { 'prefix' => '', 'thousands' => '.', 'decimal' => ',', 'group' => 'group_nutritional_plate_' + plate.id.to_s} %>
                                  <input type="hidden" id="nutritional_table[energetic_value]" name="nutritional_table[energetic_value]" value="<%= get_energetic_value(plate) %>" data-group="group_nutritional_plate_<%= plate.id %>" >
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :carbohydrate %>
                                  <%= nutritional_fields.text_field :carbohydrate, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :protein %>
                                  <%= nutritional_fields.text_field :protein, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :total_fat %>
                                  <%= nutritional_fields.text_field :total_fat, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :saturated_fat %>
                                  <%= nutritional_fields.text_field :saturated_fat, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :trans_fat %>
                                  <%= nutritional_fields.text_field :trans_fat, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :dietary_fiber %>
                                  <%= nutritional_fields.text_field :dietary_fiber, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :sodium %>
                                  <%= nutritional_fields.text_field :sodium, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                                <div class="form-group">
                                  <%= nutritional_fields.label :iron %>
                                  <%= nutritional_fields.text_field :iron, class: 'form-control group_nutritional_plate_' + plate.id.to_s %>
                                </div>
                              </div>
                            </div>
                            <% end %>
                            <div class="modal-footer">
                              <div class="pull-left">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                              </div>
                              <div>
                                <button class="btn btn-default btn-clear pull-left" style="margin-left: 4px;" type="button" data-group="<%=  'group_nutritional_plate_' + plate.id.to_s %>">Limpar</button>
                              </div>
                              <div class="form-group">
                                <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- FIM MODAL NUTRITIONAL TABLE -->