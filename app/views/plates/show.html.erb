<div class="col-lg-12">
  <%= link_to raw("<button type='button' class='btn btn-default'>Voltar</button>"), plates_path %>
  <div class="panel"></div>
	<section class="panel">
    <div class="panel-heading">
        <div class="panel-title">Detalhes</div>
    </div>
    <div class="panel-body form-horizontal">
    		      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Título</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @plate.title %></label>
          </div>
	      </div>
	    	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Descrição</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= sanitize @plate.description %></label>
          </div>
	      </div>
        
	    	<div class="form-group">
          <label for="number" class="control-label col-lg-3">Preço</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= number_to_currency(@plate.price, unit: "R$", separator: ",", delimiter: ".") %></label>
          </div>
	      </div>

        <div class="form-group">
          <label for="number" class="control-label col-lg-3">Chef</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @plate.chef.name if not @plate.chef.nil? %></label>
          </div>
        </div>

	    	<div class="form-group">
          <label for="number" class="control-label col-lg-3">Quantidade disponível</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @plate.available_quantity %></label>
          </div>
	      </div>
	    	<div class="form-group">
          <label for="number" class="control-label col-lg-3">Foto</label>
          <div class="col-lg-9">
            <%= image_tag @plate.photo.url(:thumb) %>
          </div>
	      </div>
        <div class="form-group">
          <label for="number" class="control-label col-lg-3">Tipo do Prato</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= @plate.plate_type.name %></label>
          </div>
        </div>

        <div class="form-group">
            <label for="number" class="control-label col-lg-3">Ingredientes</label>
            <div class="col-lg-9">
              <label for="number" class="form-control-static"><%= @plate.ingredients.collect {|i| i.name}.join(', ') %></label>
            </div>
        </div>

        <div class="form-group">
            <label for="number" class="control-label col-lg-3">Badges</label>
            <div class="col-lg-9">
                <% @plate.plate_badges.collect do |b| %>
                  <%= image_tag b.image.url(:thumb) %>
                <% end %>
            </div>
        </div>
	      <div class="form-group">
          <label for="number" class="control-label col-lg-3">Ativo</label>
          <div class="col-lg-9">
            <label for="number" class="form-control-static"><%= get_plate_active_label @plate  %></label>
          </div>
	      </div>
	    	     
      </div>
  </section>
</div>