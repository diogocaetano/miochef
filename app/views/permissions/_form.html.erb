<div class="col-lg-12">
  <a href="/admin/permissions">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
      <% if @permission.errors.any? %>
          <div class="alert alert-danger">
              <% @permission.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </div>
      <% end %>
      <div class="panel-body">
          <%= form_for(@permission) do |f| %>
              <div class="form-group">
                  <%= f.label 'Módulo' %><br>
                  <%= f.select :entity_id, Entity.all.collect {|entity| [ entity.name, entity.id ] }, { prompt: 'Selecione o Módulo' }, :class => 'form-control m-bot15' %>
              </div>

              <div class="form-group">
                  <%= f.label 'Nome da Ação' %><br>
                  <%= f.text_field :action_name, 'class' => 'form-control' %>
              </div>

              <div class="form-group">
                  <%= f.label 'Ação' %><br>
                  <%= f.text_field :action, 'class' => 'form-control' %>
              </div>

              <div class="form-group">
                  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
              </div>
          <% end %>
      </div>
  </section>
</div>