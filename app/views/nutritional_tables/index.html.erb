<div class="row">
  <div class="col-lg-12">
    <a href="/admin/nutritional_tables/new">
        <button type="button" class="btn btn-primary">Adicionar Nutritional table</button>
    </a>
    <div class="panel"></div>
    <section class="panel">
      <header class="panel-heading">
          Nutritional Tables
      </header>
      <div class="panel-body">
        <section id="unseen">
          <table class="table table-bmoduleed table-striped table-condensed">
            <thead>
              <tr>
                                  <th>Energetic value</th>
                                  <th>Carbohydrate</th>
                                  <th>Protein</th>
                                  <th>Total fat</th>
                                  <th>Saturated fat</th>
                                  <th>Trans fat</th>
                                  <th>Sodium</th>
                                  <th>Iron</th>
                                <th colspan='3'>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @nutritional_tables.each do |nutritional_table| %>
                <tr>
                                      <td><%= nutritional_table.energetic_value %></td>
                                      <td><%= nutritional_table.carbohydrate %></td>
                                      <td><%= nutritional_table.protein %></td>
                                      <td><%= nutritional_table.total_fat %></td>
                                      <td><%= nutritional_table.saturated_fat %></td>
                                      <td><%= nutritional_table.trans_fat %></td>
                                      <td><%= nutritional_table.sodium %></td>
                                      <td><%= nutritional_table.iron %></td>
                                    <td>
                    <%= link_to raw("<i class='fa fa-eye'></i>"), nutritional_table, :class => 'btn btn-primary' %>
                    <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_nutritional_table_path(nutritional_table), :class => 'btn btn-info' %>
                    <%= link_to raw("<i class='fa fa-trash-o'></i>"), '#delete_nutritional_table_'+nutritional_table.id.to_s, :class => 'btn btn-danger', :'data-toggle' => 'modal'  %>
                  </td>
                </tr>
                <div class="modal fade modal-dialog-center in" id="delete_nutritional_table_<%= nutritional_table.id.to_s %>"
                  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;"><div class="modal-backdrop fade in" style="height: 749px;">
                </div>
                <div class="modal-dialog ">
                  <div class="modal-content-wrap">
                    <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                          <h4 class="modal-title">Remover Nutritional Table</h4>
                      </div>
                      <div class="modal-body">
                        <div class="text-center">
                          Deseja Realmente Remover o Nutritional Table
                        </div>
                      </div>
                      <div class="modal-footer">
                        <div class="pull-left">
                          <button data-dismiss="modal" class="btn btn-default" type="button">Fechar</button>
                        </div>
                        <%= link_to raw("Confirmar"), nutritional_table, :class => 'btn btn-primary', :'data-method' => 'delete' %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end -%>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>